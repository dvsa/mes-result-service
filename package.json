{
  "name": "mes-result-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A service to receive test results from the MES mobile app",
  "homepage": "https://github.com/dvsa/mes-result-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-result-service.git"
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-result-service/issues"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "postci": "npm run bootstrap",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:int": "npm run compile && jasmine \"build/**/*int.js\"",
    "test:jasmine-coverage": "nyc npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "enjoi": "^9.0.1",
    "joi": "^17.7.1",
    "moment": "^2.29.4",
    "mysql2": "^1.7.0"
  },
  "devDependencies": {
    "@dvsa/mes-microservice-common": "0.8.3",
    "@dvsa/mes-search-schema": "1.2.0",
    "@dvsa/mes-test-schema": "3.41.1",
    "@types/aws-lambda": "^8.10.115",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.11.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^5.8.0",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "husky": "^8.0.3",
    "jasmine": "^5.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "lint-staged": "^13.2.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.1",
    "serverless": "^3.31.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^12.0.4",
    "serverless-webpack": "^5.11.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "typemoq": "^2.1.0",
    "typescript": "^5.0.4",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "lint-staged": {
    "./src/**/*.ts": [
      "npm run lint:fix"
    ]
  }
}
