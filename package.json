{
  "name": "mes-result-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A service to receive test results from the MES mobile app",
  "homepage": "https://github.com/dvsa/mes-result-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-result-service.git"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "postci": "npm run bootstrap",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan && git log -p | scanrepo",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:int": "npm run compile && jasmine \"build/**/*int.js\"",
    "test:jasmine-coverage": "nyc npm run test",
    "prepare": "husky install"
  },
  "dependencies": {
    "enjoi": "^9.0.1",
    "joi": "^17.4.2",
    "moment": "^2.29.4",
    "mysql2": "^1.7.0"
  },
  "devDependencies": {
    "@dvsa/mes-microservice-common": "0.8.1",
    "@dvsa/mes-search-schema": "1.1.4",
    "@dvsa/mes-test-schema": "3.39.7",
    "@types/aws-lambda": "^8.10.107",
    "@types/jasmine": "^4.3.0",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^5.8.0",
    "eslint": "^8.25.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^8.0.1",
    "jasmine": "^4.4.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.21.0",
    "serverless-offline": "^8.7.0",
    "serverless-webpack": "^5.10.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.3.0",
    "ts-loader": "^9.4.1",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.8.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-result-service/issues"
  }
}
